<odoo>

    <!-- New Shipment Form View -->
    <record id="view_new_manifiest_form" model="ir.ui.view">
        <field name="name">view.new.manifist.form</field>
        <field name="model">new.manifist</field>
        <field name="arch" type="xml">
            <form string="New Shipment">
                 <header>
                 <button name="my_button" string="Add Customer" type="object" class="btn 
                btn-primary"/>
            </header>
                <sheet>
                   
                    <group>
                        <group>
                            <field name="arrive_date"/>
                        </group>
                        <group>
                            <field name="loading_port_id"/>
                            <field name="discharg_port_id"/>
                        </group>
                        <group>
                            <field name="document_no"/>
                            <field name="port_no"/>
                       </group>
            </group>
            <notebook>
                <page string="Manifist">
                    <field name="manifist_line_ids">
                           <tree create="0">
                            <field name="shipper_name"/>
                            <field name="consignee_name_id"/>
                            <field name="total_no_of_contanier" />
                            <field name="total_weight"/>
                            <field name="total_package"/>
                            <field name="marks_no"/>
                            <field name="container_no" invisible="1"/>
                            <field name="description" invisible="1"/>
                            <field name="weight" invisible="1"/>                            
                            <field name="no_packing" invisible="1"/>
                            <field name="packages" invisible="1"/>
                            <field name="tariff" invisible="1"/>                       
                            <field name="final_port"/>
                            <button name="my_invoicing" string="Invoicing" type="object"
                                              class="btn btn-primary"/>
                                        <button name="unlink" type="object" string="Delete" class="btn btn-danger"
                                                confirm="Are you sure you want to delete this record?"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- New Shipment tree view -->
    <record id="view_new_manifiest_tree" model="ir.ui.view">
        <field name="name">view.new.manifist.tree</field>
        <field name="model">new.manifist</field>
        <field name="arch" type="xml">

            <tree>
               
                <field name="arrive_date"/>
                <field name="loading_port_id"/>
                <field name="discharg_port_id"/>


                
            </tree>
        </field>
    </record>
     <record id="action_new_manifest" model="ir.actions.act_window">
        <field name="name">Manifest</field>
        <field name="res_model">new.manifist</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

