<odoo>
    <!-- New Shipment Form View -->
    <record id="view_new_shipment_form" model="ir.ui.view">
        <field name="name">view.new.shipment.form</field>
        <field name="model">new.shipping</field>
        <field name="arch" type="xml">
            <form string="New Shipment">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_services" type="object" class="oe_stat_button" icon="fa-wrench">
                            <span><b>Services</b></span>
                        </button>
                        <button name="get_manifest" type="object" class="oe_stat_button" icon="fa-file">
                            <span><b>Manifest</b></span>
                        </button>
                   </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name" readonly="True"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                             <field name="shipname_id" required="True"/>
                            <field name="country_id"/>
                            <field name="loading_port_id" required="True"/>
                            <field name="discharg_port_id" required="True"/>
                            
                            <!-- <field name="is_quarantine"/>
                            <button
                                 name="action_quarentine_bill"
                                 type="object"
                                 string="Create Quarantine Bill"
                                 attrs="{'invisible': [('is_quarantine', '=', False)]}"
                                 class="oe_highlight"
                            /> -->
                           
                        </group>
                        <group>
                            <field name="agent_id"/>
                            <field name="captain" required="True"/>
                            <field name="arrive_date"/>
                            <field name="attachment" widget="url"/>
                            <!--  <field name="is_there_freight_prepaid"/>
                              <button
                                name="action_freight_prepaid_bill"
                                type="object"
                                string="Create freight prepaid bill"
                                attrs="{'invisible': [('is_there_freight_prepaid', '=', False)]}"
                                class="oe_highlight"
                                /> -->
                        </group>
                    </group>
                    <group col="8">
                        <group col="2">
                           <field name="is_quarantine"/>
                        </group>
                        <group col="2">
                             <button
                                 name="action_quarentine_bill"
                                 type="object"
                                 string="Create Quarantine Bill"
                                 attrs="{'invisible': [('is_quarantine', '=', False)]}"
                                 class="oe_highlight"
                            />
                        </group>
                        <group>
                        </group>
                        
                        <group col="2">
                           <field name="is_there_freight_prepaid"/>
                        </group>
                     
                        <group col="2">
                            <button
                                name="action_freight_prepaid_bill"
                                type="object"
                                string="Create freight prepaid bill"
                                attrs="{'invisible': [('is_there_freight_prepaid', '=', False)]}"
                                class="oe_highlight"
                                />
                        </group>
                    </group>

                    <!-- <table>
                        <tr>
                            <td><field name="is_quarantine"/></td>
                             <td> <button
                                 name="action_quarentine_bill"
                                 type="object"
                                 string="Create Quarantine Bill"
                                 attrs="{'invisible': [('is_quarantine', '=', False)]}"
                                 class="oe_highlight"
                            /></td>
                              <td><field name="is_there_freight_prepaid"/></td>
                               <td><button
                                name="action_freight_prepaid_bill"
                                type="object"
                                string="Create freight prepaid bill"
                                attrs="{'invisible': [('is_there_freight_prepaid', '=', False)]}"
                                class="oe_highlight"
                                /></td>
                        </tr>
                    </table> -->
                </sheet>
            </form>
        </field>
    </record>
    <!-- New Shipment tree view -->
    <record id="view_new_shipment_tree" model="ir.ui.view">
        <field name="name">view.new.shipment.tree</field>
        <field name="model">new.shipping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Shipment"/>
                <field name="shipname_id" string="Ship Name"/>
                <field name="loading_port_id"/>
                <field name="discharg_port_id"/>
            </tree>
        </field>
    </record>
</odoo>

